#!/bin/bash

echo "安裝Python pip套件與前置需求套件."
 
sudo apt-get install -y  build-essential  cmake curl gfortran git libatlas-dev libavcodec-dev\ libavformat-dev libboost-all-dev libgtk2.0-dev libjpeg-dev liblapack-dev libswscale-dev\ 
pkg-config python-dev python-pip wget zip


sudo pip install numpy
sudo pip install cython 
sudo pip install scipy 
sudo pip install scikit-learn 
sudo pip install scikit-image 
sudo pip install pandas
sudo pip install nolearn # for use nolearn.DBN

pip list
